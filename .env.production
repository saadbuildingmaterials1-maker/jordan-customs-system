# ===================================
# Production Environment Configuration
# ===================================

# Application
NODE_ENV=production
APP_NAME="نظام إدارة تكاليف الشحن والجمارك الأردنية"
APP_URL=https://customs-system.example.com
FRONTEND_URL=https://customs-system.example.com

# Database
DATABASE_URL=mysql://prod_user:prod_password@prod-db.example.com:3306/customs_prod

# Server
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_IN_PRODUCTION
CORS_ORIGIN=https://customs-system.example.com

# OAuth
VITE_APP_ID=prod_oauth_app_id
OAUTH_SERVER_URL=https://oauth.example.com
VITE_OAUTH_PORTAL_URL=https://oauth.example.com/portal

# Owner Info
OWNER_NAME=Production Admin
OWNER_OPEN_ID=prod_owner_id

# Stripe (Live Keys)
STRIPE_SECRET_KEY=sk_live_prod_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_prod_key
STRIPE_WEBHOOK_SECRET=whsec_live_prod_key

# Email Service
SMTP_HOST=smtp.prod.example.com
SMTP_PORT=587
SMTP_USER=noreply@customs-system.example.com
SMTP_PASSWORD=prod_email_password
SMTP_FROM=noreply@customs-system.example.com

# Logging
LOG_LEVEL=warn
LOG_FILE=/var/log/customs-system/production.log

# Monitoring
SENTRY_DSN=https://prod_sentry_key@sentry.example.com/prod_project_id
DATADOG_API_KEY=prod_datadog_key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=true
ENABLE_EXPORTS=true
ENABLE_ADVANCED_REPORTS=true

# Rate Limiting (Production - Strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * * # Daily at 3 AM
BACKUP_RETENTION_DAYS=90

# Cache
CACHE_TTL=7200
REDIS_URL=redis://prod-redis.example.com:6379

# API Keys
BUILT_IN_FORGE_API_KEY=prod_forge_api_key
BUILT_IN_FORGE_API_URL=https://api.example.com
VITE_FRONTEND_FORGE_API_KEY=prod_frontend_forge_key
VITE_FRONTEND_FORGE_API_URL=https://api.example.com

# Analytics
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=prod_analytics_id

# Debugging
DEBUG=false
VERBOSE_LOGGING=false
