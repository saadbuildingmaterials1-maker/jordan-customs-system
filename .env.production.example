# ====================================================================
# نظام إدارة تكاليف الشحن والجمارك الأردنية - إعدادات الإنتاج
# Jordan Customs System - Production Environment Configuration
# ====================================================================

# ====== البيئة والتطبيق ======
NODE_ENV=production
VITE_ENV=production
VITE_APP_TITLE=نظام إدارة تكاليف الشحن والجمارك الأردنية
VITE_APP_LOGO=https://cdn.mp3-app.com/logo.png
DOMAIN_NAME=mp3-app.com
VITE_APP_URL=https://mp3-app.com

# ====== قاعدة البيانات ======
DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/jordan_customs_prod

# ====== المصادقة والأمان ======
JWT_SECRET=<SECURE_RANDOM_256_BIT_KEY>
SESSION_SECRET=<SECURE_RANDOM_256_BIT_KEY>

# ====== OAuth (Manus) ======
VITE_APP_ID=<MANUS_APP_ID>
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://auth.manus.im
OWNER_OPEN_ID=<OWNER_OPEN_ID>
OWNER_NAME=<OWNER_NAME>

# ====== Manus Built-in APIs ======
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=<FORGE_API_KEY>
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im
VITE_FRONTEND_FORGE_API_KEY=<FRONTEND_FORGE_API_KEY>

# ====== Stripe (بوابة الدفع الأولى) ======
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# ====== PayPal (بوابة الدفع الثانية) ======
PAYPAL_CLIENT_ID=AQDxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYPAL_MODE=live

# ====== Apple Pay (بوابة الدفع الثالثة) ======
VITE_APPLE_PAY_MERCHANT_ID=merchant.com.mp3app

# ====== المراقبة والأخطاء (Sentry) ======
SENTRY_DSN=https://xxxxxxx@xxxxx.ingest.sentry.io/xxxxxx

# ====== مراقبة الأداء (DataDog) ======
DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DATADOG_APP_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DATADOG_SITE=datadoghq.com

# ====== البريد الإلكتروني والإشعارات ======
ADMIN_EMAIL=admin@mp3-app.com
BACKUP_EMAIL=backup@mp3-app.com
SUPPORT_EMAIL=support@mp3-app.com

# ====== معلومات المطور ======
DEVELOPER_NAME=<DEVELOPER_NAME>
DEVELOPER_EMAIL=<DEVELOPER_EMAIL>
DEVELOPER_PHONE=<DEVELOPER_PHONE>

# ====== إعدادات الأمان ======
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/mp3-app.com.crt
SSL_KEY_PATH=/etc/ssl/private/mp3-app.com.key

FIREWALL_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

CORS_ORIGINS=https://mp3-app.com,https://www.mp3-app.com
CORS_CREDENTIALS=true

CSP_ENABLED=true
CSP_REPORT_URI=https://mp3-app.com/api/csp-report

# ====== إعدادات الأداء ======
CACHE_ENABLED=true
CACHE_TTL=3600
CDN_ENABLED=true
CDN_URL=https://cdn.mp3-app.com

# ====== إعدادات السجلات ======
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/log/jordan-customs

# ====== إعدادات النسخ الاحتياطية ======
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/backups/jordan-customs

# ====== إعدادات المراقبة ======
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60
UPTIME_MONITORING_ENABLED=true

# ====== إعدادات البيئة الإضافية ======
PORT=3000
NODE_OPTIONS=--max-old-space-size=4096
WORKERS=4

