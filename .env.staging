# ===================================
# Staging Environment Configuration
# ===================================

# Application
NODE_ENV=staging
APP_NAME="نظام إدارة تكاليف الشحن والجمارك الأردنية - Staging"
APP_URL=https://staging.customs-system.example.com
FRONTEND_URL=https://staging.customs-system.example.com

# Database
DATABASE_URL=mysql://staging_user:staging_password@staging-db.example.com:3306/customs_staging

# Server
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=staging_jwt_secret_key_change_in_production
CORS_ORIGIN=https://staging.customs-system.example.com

# OAuth
VITE_APP_ID=staging_oauth_app_id
OAUTH_SERVER_URL=https://staging-oauth.example.com
VITE_OAUTH_PORTAL_URL=https://staging-oauth.example.com/portal

# Owner Info
OWNER_NAME=Staging Admin
OWNER_OPEN_ID=staging_owner_id

# Stripe (Test Keys)
STRIPE_SECRET_KEY=sk_test_staging_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_staging_key
STRIPE_WEBHOOK_SECRET=whsec_test_staging_key

# Email Service
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging@example.com
SMTP_PASSWORD=staging_email_password
SMTP_FROM=noreply@staging.customs-system.example.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/customs-system/staging.log

# Monitoring
SENTRY_DSN=https://staging_sentry_key@sentry.example.com/staging_project_id
DATADOG_API_KEY=staging_datadog_key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=true
ENABLE_EXPORTS=true
ENABLE_ADVANCED_REPORTS=true

# Rate Limiting (Staging - More Permissive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
AUTH_RATE_LIMIT_MAX=20

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Cache
CACHE_TTL=3600
REDIS_URL=redis://staging-redis.example.com:6379

# API Keys
BUILT_IN_FORGE_API_KEY=staging_forge_api_key
BUILT_IN_FORGE_API_URL=https://staging-api.example.com
VITE_FRONTEND_FORGE_API_KEY=staging_frontend_forge_key
VITE_FRONTEND_FORGE_API_URL=https://staging-api.example.com

# Analytics
VITE_ANALYTICS_ENDPOINT=https://staging-analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=staging_analytics_id

# Debugging
DEBUG=false
VERBOSE_LOGGING=true
